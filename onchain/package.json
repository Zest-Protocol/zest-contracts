{
  "name": "onchain-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "private": true,
  "scripts": {
    "test": "vitest run", 
    "test:nothing": "(yes | clarinet check --manifest-path ./Clarinet.toml) && vitest run ./tests/borrow -- --manifest-path ./Clarinet.toml",
    "test:math": "(yes | clarinet check --manifest-path ./Clarinet.toml) && vitest run ./tests/borrow/math.test.ts -- --manifest-path ./Clarinet.toml -t 'Math with timestamps'",
    "test:costs": "vitest run -- --costs",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^2.3.2",
    "@stacks/transactions": "^6.12.0",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "vitest-environment-clarinet": "^2.0.0"
  }
}
